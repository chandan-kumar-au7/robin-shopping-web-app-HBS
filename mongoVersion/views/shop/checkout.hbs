<div id="charge-error" class="alert alert-danger {{#if noError}}invisible{{/if}}">
    {{errMsg}}
</div>

<div class='checkout'>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 main">
            <h1>Checkout</h1>
            <h4>You Will Be Charged : <i class="fa fa-inr fa-2x" aria-hidden="true"> {{total}} </i></h4>
            <form action="/checkout" method="POST" id="checkout-form">
                <div class="checkout">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="row checkout">
                    <div class="col-md-6">
                        <label for="contactno1">Contact 1</label>
                        <input type="text" class="form-control" id="contactno1" name="contactno1" required>
                    </div>
                    <div class="col-md-6">
                        <label for="contactno2">Contact 2</label>
                        <input type="text" class="form-control" id="contactno2" name="contactno2" required>
                    </div>
                </div>
                <div class="checkout">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" name="address" name="address" required>
                </div>
                <div class="row checkout">
                    <div class="col-md-4">
                        <label for="city">City</label>
                        <input type="text" class="form-control" id="city" name="city" required>
                    </div>
                    <div class="col-md-4">
                        <label for="state">State</label>
                        <input type="text" class="form-control" id="state" name="state" required>
                    </div>
                    <div class="col-md-4">
                        <label for="pin">Pin Code</label>
                        <input type="text" class="form-control" id="pin" name="pin" required>
                    </div>
                </div>
                <div class="checkout">
                    <label for="card-holder">Card Holder Name</label>
                    <input type="text" class="form-control" id="card-holder" required>
                </div>
                <div class="checkout">
                    <label for="card-number">Credit Card Number</label>
                    <input type="text" class="form-control" id="card-number" required>
                </div>
                <div class="row checkout">
                    <div class="col-md-6">
                        <label for="card-expiry-month">Expiration Month</label>
                        <input type="text" class="form-control" id="card-expiry-month" required>
                    </div>
                    <div class="col-md-6">
                        <label for="card-expiry-year">Expiration Year</label>
                        <input type="text" class="form-control" id="card-expiry-year" required>
                    </div>
                </div>
                <div class="checkout">
                    <label for="card-cvc">CVC</label>
                    <input type="text" class="form-control" id="card-cvc" required>
                </div>
                <center><button class="btn btn-raised btn-success main" type="submit">Buy</button></center>
            </form>
        </div>
    </div>
</div>

<script src="https://js.stripe.com/v2/"></script>
<script src="javascripts/checkout.js"></script>
<div class="row">
    <center>
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <div id="success" class="alert alert-success {{#if noMessage}}invisible{{/if}}">
                {{ successMgs }}
            </div>
        </div>
    </center>
</div>

<div class="row" style="padding: 1rem; height:20rem;">
    {{# if products }}
    {{# each products }}
    <hr>

    <div class="row" style="border: 1px solid#90ee90;display: flex;align-items: center;">
        <div class="col-sm-2" >
            <a href="/productdekho/{{this.item._id}}">
                <img src=" {{ this.item.imagePath }}" id="product-title-image" class="img-responsive "
                    style="padding: 1rem; height:13rem; width:auto" alt="...">
            </a>
        </div>

        <div class="col-sm-6" >
            <h1> {{ this.item.title }}</h1>
            <i class="fa fa-inr fa-2x" aria-hidden="true">{{ this.item.price }}</i>
        </div>

        <div class="col-sm-2" style="text-align:center;">
            <div class="row">
                <a href="/increase/{{this.item._id}}">
                    <button class="btn btn-primary" type="button"> + </button>
                </a>
                <a href="/reduce/{{this.item._id}}">
                    <button class=" btn btn-primary" type="button"> - </button>
                </a>
            </div>
        </div>

        <div class="col-sm-1" style="text-align:center;">
            <div class="row">
                <i class="fa fa-cart-arrow-down fa-2x"> {{ this.qty }} </i>
            </div>
            <div class="row">
                <a href="/remove/{{this.item._id}}"><i class="fa fa-bomb fa-2x" aria-hidden="true"></i>clear_all</a>
            </div>
        </div>
    </div>
    <hr>
    {{/each}}

    <div class="row" style="display: flex">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong style="font-size: xx-large;">Total: <i class="fa fa-inr fa-2x" aria-hidden="true"></i>
                {{ totalPrice }} </strong>
        </div>
    </div>

    {{!-- ==================================================================== --}}
    <hr>
    <div class="row">
        <div style="margin-top: 2rem;" class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">ORDER</a>
        </div>
    </div>

</div>



{{else}}
<div id="signupform" class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No Items in Cart</h2>
        <h5> <a href="/"> shop-more-product-here</a> </h5>
    </div>
</div>
{{/if}}
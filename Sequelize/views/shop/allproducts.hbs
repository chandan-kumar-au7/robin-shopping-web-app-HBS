<div class="row">
    <center>
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3" style="margin-bottom: 0rem;">
            <div id="success" class="alert alert-success {{#if noMessage}}invisible{{/if}}">
                {{ successMgs }}
            </div>
        </div>
    </center>
</div>

<div class="row">
    {{# each products }}
    {{# each this }}
    <div class="col-sm-6 col-md-4" id="addtocartforshow">
        <div class="thumbnail">
            <a href="/productdekho/{{this._id}}">
                <img src="{{ this.imagePath }}" alt="Card image cap" class="img-responsive">
            </a>
            <div class="caption">
                <h3>{{ this.title }}</h3>
                <p class="description">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left"> <i class="fa fa-inr fa-2x" aria-hidden="true"> {{ this.price }} </i>
                    </div>
                    <div class="addtocartforhide">
                        <a href="/add-to-cart/{{this._id}}" class="btn-success pull-right addtocartforhideforpadding">
                            <i class="fa fa-cart-plus fa-3x" style="padding: 1rem;" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{/each}}
</div>